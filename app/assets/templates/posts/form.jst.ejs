<div class="modal-topbar">
  <h1 class="modal-title"><%= this.sectionName %></h1>
</div>
<div class="modal-section">
  <form class="create-form">
    <h3>New Post</h3>
    <div class="form-group">
      <label for="post_topic">Topic</label>
      <input class="form-control" type="text" id="post_topic" name="post[topic]" value="">
    </div>

    <div class="form-group">
      <label for="post_body">Body</label>
      <textarea id="post_body"
                class="form-control vertical-resize"
                name="post[body]"
                rows="3"
      ></textarea>
    </div>
  </form>
</div>
<div class="modal-bottombar">
  <button name="submit" type="button" class="btn btn-default btn-primary modal-submit">Post</button>
</div>
