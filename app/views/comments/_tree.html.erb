<p>
  <%= comment.body %>
</p>
<%= render 'comments/leaf', comment: comment %>
<ul>
  <% comments_by_parent[comment.id].each do |child| %>
    <li><%= render('comments/tree',
                    comment: child,
                    comments_by_parent: comments_by_parent) %>
    </li>
  <% end %>
</ul>
