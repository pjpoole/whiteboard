<% unless @user.classes.empty? %>
  <table class="course-list">
    <%= render 'sections/add_create_buttons' %>
    <thead>
      <td></td>
      <td><strong>Title</strong></td>
      <td><strong>Description</strong></td>
    </thead>

    <tbody>

    <% @user.classes.each do |section| %>
      <tr>
        <td><a href="<%= section_url(section) %>"><%= section.title %></a></td>
        <td><%= section.description %></td>
      </tr>
    <% end %>

    </tbody>
  </table>

<% else %>
  <h2>No classes found!</h2>
  <%= render 'sections/add_create_buttons' %>
<% end %>
