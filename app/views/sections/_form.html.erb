<% if section.persisted? %>
  <% button_name = "Update" %>
  <% action = section_url %>
  <% method = "PUT" %>
<% else %>
  <% button_name = "Create" %>
  <% action = sections_url %>
  <% method = "POST" %>
<% end %>

<form id="section-form" action="<%= action %>" method="post">
  <%= auth_token %>
  <input type="hidden" name="_method" value="<%= method %>">

  <label for="section_title">Title</label>
  <input type="text" id="section_title" name="section[title]" value="<%= section.title %>">

  <label for="section_description">Description</label>
  <input type="text" name="section[description]" value="<%= section.description %>">

  <button name="submit"><%= button_name %></button>
</form>
