<table class="course-list">
  <% unless @sections.nil? %>
    <thead>
      <td></td>
      <td><strong>Title</strong></td>
      <td><strong>Description</strong></td>
    </thead>

    <tbody>

    <% @sections.each do |section| %>
      <tr>
        <!-- TODO: make button change depending on whether student is enrolled -->
        <td><%= button_to "Enroll", { action: :create, controller: :enrollments, section_id: section.id } %></td>
        <td><a href="<%= section_url(section) %>"><%= section.title %></a></td>
        <td><%= section.description %></td>
      </tr>
    <% end %>

    </tbody>


  <% end %>
</table>
